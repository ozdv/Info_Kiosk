                            <Setter  Property="Visibility" Value="Visible"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Resources>
        </Image>
        <Image x:Name="Health_Resources" Source="Assets/health.png" Margin="0,216,126,238" HorizontalAlignment="Right" VerticalAlignment="Center" Height="86" Width="110" MouseDown="Health_Resources_MouseDown" Grid.Column="1"  >
            <Image.Resources>
                <Style TargetType="Image">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=DisplayImage, Path=IsPressed}" Value="True">
                            <Setter  Property="Visibility" Value="Visible"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Resources>
        </Image>
        <Image x:Name="ResourceGroups" Source="Assets/resourceGroup.png" Margin="0,380,764,74" HorizontalAlignment="Right" VerticalAlignment="Center" Height="86" Width="110" MouseDown="ResourceGroups_MouseDown"  >
            <Image.Resources>
                <Style TargetType="Image">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=DisplayImage, Path=IsPressed}" Value="True">
                            <Setter  Property="Visibility" Value="Visible"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Resources>
        </Image>
        <Image x:Name="GovDoc" Source="Assets/govdoc.png" Margin="0,380,120,74" HorizontalAlignment="Right" VerticalAlignment="Center" Height="86" Width="110" MouseDown="GovDoc_MouseDown" Grid.Column="1"  >
            <Image.Resources>
                <Style TargetType="Image">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=DisplayImage, Path=IsPressed}" Value="True">
                            <Setter  Property="Visibility" Value="Visible"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Resources>
        </Image>
        <Image x:Name="Banking" Source="Assets/banking.png" Margin="0,380,452,74" HorizontalAlignment="Right" VerticalAlignment="Center" Height="86" Width="110" MouseDown="Banking_MouseDown" Grid.ColumnSpan="2"  >
            <Image.Resources>
                <Style TargetType="Image">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=DisplayImage, Path=IsPressed}" Value="True">
                            <Setter  Property="Visibility" Value="Visible"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Resources>
        </Image>
    </Grid>
</UserControl>
