        </Image>
        <Image x:Name="Accommodations" Source="Assets/housing.png" Margin="0,76,120,378" HorizontalAlignment="Right" VerticalAlignment="Center" Height="86" Width="110" MouseDown="Accommodations_MouseDown" Grid.Column="1"  >
            <Image.Resources>
                <Style TargetType="Image">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=DisplayImage, Path=IsPressed}" Value="True">
                            <Setter  Property="Visibility" Value="Visible"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Resources>
        </Image>
        <Image x:Name="Attractions" Source="Assets/attractions.png" Margin="0,226,764,221" HorizontalAlignment="Right" VerticalAlignment="Center" Height="93" Width="108" MouseDown="Attractions_MouseDown"  >
            <Image.Resources>
                <Style TargetType="Image">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=DisplayImage, Path=IsPressed}" Value="True">
                            <Setter  Property="Visibility" Value="Visible"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Resources>
        </Image>
        <Image x:Name="Events" Source="Assets/calendar.png" Margin="0,226,450,228" HorizontalAlignment="Right" VerticalAlignment="Center" Height="86" Width="110" MouseDown="Events_MouseDown" Grid.ColumnSpan="2"  >
            <Image.Resources>
                <Style TargetType="Image">
                    <Style.Triggers>
